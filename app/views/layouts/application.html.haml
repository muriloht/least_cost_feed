!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Least Cost Feed"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = stylesheet_link_tag 'application', :media => 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    = yield(:head)
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          %a.navbar-brand{href:"#"}Least Cost Feed
        .navbar-collapse.collapse
          - if current_user
            %ul.nav.navbar-nav
              %li.active
                %a{href:"#"}>
                  Home
              %li
                %a{href:"#about"}
                  About
              %li
                %a{href:"#contact"}
                  Contact
              %li.dropdown
                %a.dropdown-toggle{href:"#", "data-toggle" => "dropdown"}
                  Dropdown 
                  %b.caret
                %ul.dropdown-menu
                  %li
                    %a{href:"#"}
                      Action
                  %li
                    %a{href:"#"}
                      Another action
                  %li
                    %a{href:"#"}
                      Something else here
                  %li.divider
                  %li.dropdown-header
                    Nav header
                  %li
                    %a{href:"#"}
                      Separated link
                  %li
                    %a{href:"#"}
                      One more separated link
          - if !logged_in?
            - if !@user
              = simple_form_for :session, url: sessions_path, html: { class: 'navbar-form navbar-right' } do |f|
                = f.input_field :username, placeholder: 'Username', class: 'form-control'
                = f.password_field :password, placeholder: 'Password', class: 'form-control'
                = f.button :submit, "Login", class: "btn btn-success"
                = link_to 'Sign Up', signup_path, class: 'btn btn-info'
          - else
            %ul.dropdown.nav.navbar-nav.navbar-right
              %li.dropdown
                %a.dropdown-toggle{href:"#", "data-toggle" => "dropdown"}
                  = current_user.name
                  %b.caret
                %ul.dropdown-menu
                  %li 
                    = link_to "Edit Profile", edit_user_path(current_user)
                  %li 
                    = link_to 'Logout', logout_path, method: :delete
    .container
      = yield